{% extends 'base.html.twig' %}

{% block title %}The Stocks: {{ item[0].name }}{% endblock %}

{% dump(item) %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-lg-6 col-md-6 col-md-offset-3">
                <div class="thumbnail">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <img class="thumbImage itemImage" src="{{ asset(item[0].imagePath) }}">
                        </div>
                        <div class="panel-body">

                            <div class="caption">
                                <h2 class="center-text">{{ item[0].name }}</h2>
                                <h5 class="text-center">In stock: {{ item[0].quantity }}</h5>
                                <h3 class="center-text"><sub>{{ item[0].category }}</sub></h3>
                                <p>{{ item[0].description | capitalize}}</p>
                            </div>

                            <h3 class="center-text">Discount: {{ item['discount'] }}%</h3>
                            <h1 class="center-text">{{ (item[0].price - item[0].price * (item['discount'] / 100))|number_format(2, '.') }} lv.</h1>
                            <h3 class="center-text"><sub>Original Price: {{ item[0].price|number_format(2, '.') }} lv.</sub></h3>
                        </div>
                    </div>

                    {% if item[0].user.id != app.user.id %}
                        <form class="row" method="post" action="{{ path('cart_add', { 'id': item[0].id}) }}">
                            <div class="col-md-8">
                                <input class="form-control field" name="quantity" type="number" placeholder="Quantity" min="1" max="{{ item[0].quantity }}">
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-block btn-success btn-lg">Add to cart</button>
                            </div>
                        </form>
                    {% endif %}
                </div>
            </div>

            {% if item[0].user.id == app.user.id or app.user.isEditor() %}
                <div class="col-sm-6 com-lg-6 col-md-6 col-md-offset-3">
                    <form method="post" action="{{ path('item_delete', { id: item[0].id }) }}" class="pull-right">
                        <button class="btn btn-danger btn-lg" type="submit">Remove</button>
                    </form>
                    <a href="{{ path('item_edit', { id: item[0].id }) }}" class="btn btn-primary btn-lg pull-right">Edit</a>
                </div>
            {% endif %}

        </div>
    </div>

{% endblock %}

