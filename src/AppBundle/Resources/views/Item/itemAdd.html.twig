{% extends 'base.html.twig' %}

{% block title %}The Stocks: Add Item{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
            {{ form_start(form, { 'attr': { 'class': 'panel panel-default' } }) }}

                <div class="panel-body">
                    {{ form_row(form.name) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.imagePath) }}
                    <hr>
                    {{ form_row(form.category) }}
                    {{ form_row(form.price) }}
                    {{ form_row(form.quantity) }}
                    {{ form_row(form.submit) }}
                    {{ form_row(form.user, { 'value': app.user.id }) }}
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>

{% endblock %}