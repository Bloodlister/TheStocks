{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 bg-info leftCorners">
                <h3 class="text-center">OverView</h3>
            </div>
            <div class="col-md-4 bg-primary">
                <h3 class="text-center">Purchase Info</h3>
            </div>
            <div class="col-md-4 bg-info rightCorners">
                <h3 class="text-center">Finish!</h3>
            </div>
        </div>
    </div>

    <br>

    <div class="container">
        <div class="row">
            {{ form_start(form) }}

            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="text-center panel-heading"><h3>Personal information:</h3></div>
                    <div class="panel-body">
                        <div class="form-group">
                            {{ form_row(form.receiver) }}
                            {{ form_row(form.phoneNumber) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading text-center"><h3>Shipping information</h3></div>
                    <div class="panel-body">
                        <div class="form-group">
                            {{ form_row(form.country) }}

                            {{ form_row(form.address) }}

                            {{ form_row(form.postCode) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <hr>
            </div>

            <div class="col-md-6 col-md-offset-3">
                <h3>
                    <span class="pull-left">Your Money:</span>
                    &nbsp;
                    <span class="pull-right">{{ user.cash|number_format(2, '.') }}</span>
                </h3>
                <h3 class="text-right">- &nbsp;</h3>
                <h3>
                    <span class="pull-left">Total Cost:</span>
                    &nbsp;
                    <span class="pull-right">{{ totalCost|number_format(2, '.') }}</span>
                </h3>
                <hr>
                <h3>
                    <span class="pull-left">Remains:</span>
                    &nbsp; <span class="pull-right">{{ (user.cash - totalCost)|number_format(2, '.') }} lv.</span>
                </h3>

                {{ form_row(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <br>
{% endblock %}

