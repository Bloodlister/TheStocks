{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <img src="{{ asset(item.imagePath) }}" class="col-md-offset-3 col-md-6" alt="">
            <div class="col-md-offset-3 col-md-6">
                <h2 class="center-text">Name: <b>{{ item.name }}</b></h2>
                <h3>{{ item.description }}</h3>
                {% if item.itemDiscount == null %}
                    <h3>Price: <b>{{ item.price | number_format(2, '.')}}</b> lv.</h3>
                {% else %}
                    <h3>Current Price: {{ item.priceWithDiscount | number_format(2, '.') }} lv.</h3>
                    <h3><sub>Original Price: {{ item.price | number_format(2, '.') }} lv.</sub></h3>
                {% endif %}

                <br>
                <hr>
                <br>

                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

